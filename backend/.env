# MongoDB Configuration
# Replace with your MongoDB Atlas connection string
MONGODB_URI=your_mongodb_connection_string_here
DB_NAME=salon_appointment

# JWT Configuration
# Generate a strong secret key: openssl rand -hex 32
SECRET_KEY=generate_a_strong_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
PORT=5000
# Set to False in production
DEBUG=True

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=https://salon-appointment-one.vercel.app,http://localhost:3000,http://localhost:5173,http://localhost:8080

# Email Configuration (if needed)
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_email_password
# DEFAULT_FROM_EMAIL=your_email@example.com
